{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "isolatedModules": false,
    "baseUrl": ".",
    "strictNullChecks": true,
    "strict": true,
    "allowJs": false,
    "skipLibCheck": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "lib": [
      "DOM",
      "ESNext"
    ],
    "noEmit": true,
    "paths": {
      "@support/*": [
        "./support/*"
      ]
    },
    "rootDir": "."
  },
  "include": [
    "./**/*"
  ]
}
