{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "isolatedModules": false,
    "baseUrl": ".",
    "strictNullChecks": true,
    "strict": true,
    "allowJs": false,
    "skipLibCheck": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "lib": ["DOM", "ESNext"],
    "types": ["../node_modules/cypress", "./types"],
    "paths": {
      "@support/*": ["./support/*"]
    },
    "rootDir": "."
  },
  "include": ["./**/*", "../node_modules/cypress"]
}
