{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "isolatedModules": false,
    "baseUrl": ".",
    "strictNullChecks": true,
    "strict": true,
    "allowJs": false,
    "skipLibCheck": true,
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "Node",
    "types": ["node", "cypress", "@types"],
    "paths": {
      "@support/*": ["./support/*"],
      "@types/*": ["./types/*"],
      "@fixtures/*": ["./fixtures/*"]
    }
  },
  "include": ["./", "../node_modules/cypress"]
}
